		 // ì±… í•­ëª© UI ì—…ë°ì´íŠ¸ í•¨ìˆ˜
		 function updateBookItem(updatedBook) {
		     console.log("ì—…ë°ì´íŠ¸í•  ì±… ì •ë³´:", updatedBook); // ë””ë²„ê¹…: ì—…ë°ì´íŠ¸í•  ì±… ì •ë³´ ë¡œê·¸

		     // í•´ë‹¹ shelfNumì„ ê°€ì§„ ì±… í•­ëª© ì°¾ê¸°
		     let $bookItem = $(`.book-item[data-shelf-num="${updatedBook.shelfNum}"]`);
		     
		     if ($bookItem.length > 0) {
		         // ì§„í–‰ë¥  ê³„ì‚°
		         let progress = (updatedBook.readPages / updatedBook.bookPage) * 100;
		         let formattedProgress = progress.toFixed(2); // ì†Œìˆ˜ì  ë‘˜ì§¸ ìë¦¬ê¹Œì§€ í‘œì‹œ

		         // UI ì—…ë°ì´íŠ¸
		         $bookItem.find('.start-date').text(updatedBook.startDate);
		         $bookItem.find('.progress-bar')
		             .css('width', `${progress}%`)
		             .attr('aria-valuenow', progress);
		         $bookItem.find('.book-progress').html(
		             `${formattedProgress}% (${updatedBook.readPages}/${updatedBook.bookPage} í˜ì´ì§€)`
		         );

		         console.log('ì±… í•­ëª© ì—…ë°ì´íŠ¸ ì™„ë£Œ:', updatedBook.shelfNum);
		     } else {
		         console.error('ì±… í•­ëª©ì„ ì°¾ì„ ìˆ˜ ì—†ìŒ:', updatedBook.shelfNum);
		     }
		 }
