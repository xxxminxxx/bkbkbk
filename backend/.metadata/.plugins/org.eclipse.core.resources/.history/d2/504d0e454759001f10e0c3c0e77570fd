           $('#saveMemoButton').on('click', function() {
               var memoContent = $('#memoContent').val().trim(); // ì•ë’¤ ê³µë°± ì œê±°

               if (!currentBookTitle) {
                   console.error('ì±… ì œëª©ì´ ì„ íƒë˜ì§€ ì•Šì•˜ìŠµë‹ˆë‹¤.');
                   alert('ì±…ì„ ì„ íƒí•´ì£¼ì„¸ìš”.');
