		 // íƒ­ ìƒˆë¡œê³ ì¹¨ í•¨ìˆ˜ ìˆ˜ì •
		 function refreshTab(tabId) {
		     console.log("Refreshing tab:", tabId); // ë””ë²„ê¹…: ì–´ë–¤ íƒ­ì´ ìƒˆë¡œê³ ì¹¨ë˜ëŠ”ì§€ ë¡œê·¸

		     $.ajax({
		         url: '/refreshTab',
		         type: 'GET',
		         data: { tabId: tabId },
		         success: function(response) {
		             console.log("Server response received for tab:", tabId); // ë””ë²„ê¹…: ì„œë²„ ì‘ë‹µ ìˆ˜ì‹  ë¡œê·¸
		             console.log("Response content:", response); // ë””ë²„ê¹…: ì‘ë‹µ ë‚´ìš© ë¡œê·¸

		             let tab = document.getElementById(tabId);
		             if (!tab) {
		                 console.error("Tab element not found:", tabId); // ë””ë²„ê¹…: íƒ­ ìš”ì†Œë¥¼ ì°¾ì§€ ëª»í•œ ê²½ìš°
		                 return;
		             }

		             console.log("Tab element found:", tab); // ë””ë²„ê¹…: íƒ­ ìš”ì†Œ ì°¾ìŒ

		             // ì •ë ¬ ë²„íŠ¼ ë³´ì¡´
		             let sortButtons = $(tab).find('.btn-group').detach();
		             console.log("Sort buttons detached:", sortButtons); // ë””ë²„ê¹…: ë¶„ë¦¬ëœ ì •ë ¬ ë²„íŠ¼

		             // íƒ­ ë‚´ìš© ì—…ë°ì´íŠ¸
		             tab.innerHTML = response;
		             console.log("Tab content updated"); // ë””ë²„ê¹…: íƒ­ ë‚´ìš© ì—…ë°ì´íŠ¸ë¨

		             // ì •ë ¬ ë²„íŠ¼ ë‹¤ì‹œ ì¶”ê°€
		             $(tab).prepend(sortButtons);
		             console.log("Sort buttons reattached"); // ë””ë²„ê¹…: ì •ë ¬ ë²„íŠ¼ ë‹¤ì‹œ ì¶”ê°€ë¨

		             // ì±… ëª©ë¡ ë°°ì—´ ê°±ì‹ 
		             updateBookArrays();
		             console.log("Book arrays updated"); // ë””ë²„ê¹…: ì±… ë°°ì—´ ì—…ë°ì´íŠ¸ë¨

		             // ì •ë ¬ ì´ë²¤íŠ¸ ë¦¬ìŠ¤ë„ˆ ë‹¤ì‹œ ì¶”ê°€
		             addSortListeners($(tab).find('input[name^="sort-"]'));
		             console.log("Sort listeners reattached"); // ë””ë²„ê¹…: ì •ë ¬ ë¦¬ìŠ¤ë„ˆ ë‹¤ì‹œ ì¶”ê°€ë¨
		         },
		         error: function(xhr, status, error) {
		             console.error(`Error refreshing ${tabId} tab:`, error); // ë””ë²„ê¹…: ì˜¤ë¥˜ ë°œìƒ ì‹œ ìƒì„¸ ì •ë³´
		             console.error("XHR status:", status);
		             console.error("XHR response:", xhr.responseText);
		         }
		     });
		 }
			
